@model IEnumerable<ServiceModel>

    ﻿


<div class="page-content">
	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
		<div class="breadcrumb-title pe-3">Thái Y Viện</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item">
						<a href="javascript:;"><i class="bx bx-home-alt"></i></a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Quản lý dịch vụ trị liệu</li>
				</ol>
			</nav>
		</div>
		
	</div>
	<!--end breadcrumb-->

	<div class="card">
		<div class="card-body">
			<div class="d-lg-flex align-items-center mb-4 gap-3">
				<div class="position-relative">
					<input type="text" class="form-control ps-5 radius-30" placeholder="Search Order"> <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
				</div>
				<div class="ms-auto"><a asp-action="Create" asp-controller="Service" class="btn btn-primary radius-30 mt-2 mt-lg-0"><i class="bx bxs-plus-square"></i>Thêm dịch vụ mới</a></div>
			</div>
			<div class="table-responsive">
				<table class="table mb-0">
					<thead class="table-light">
						<tr>
							<th >#</th>
							<th>Tên dịch vụ trị liệu</th>
							<th>Gía Dịch vụ</th>
							<th >Thời gian trị liệu</th>
							<th >Loại hình trị liệu</th>
							<th>Quy Trình trị liệu</th>
							<th>Hình ảnh</th>
							<th >Hành động</th>
						</tr>
					</thead>
					<tbody>
						@foreach ( var item in Model)
						{
							<tr>
								<td>
									<div class="d-flex align-items-center">
										<div>
											<input class="form-check-input me-3" type="checkbox" value="" aria-label="...">
										</div>
										<div class="ms-2">
											<h6 class="mb-0 font-14">#@(item.ID + 1)</h6>

										</div>
									</div>
								</td>
								<td >@item.Title</td>
								<td >@item.Price.ToString("##,##0") VND</td>

								<td>@item.Duration phút</td>
								<td>
									@{
										string statusText = item.Status == 0 ? "Trị liệu cơ bản" :
										item.Status == 1 ? "Trị liệu nâng cao" :
										item.Status == 2 ? "Trị liệu chuyên sâu" :
										"Chưa cập nhật";
									}
									@statusText
								</td>
								<td >@item.Description</td>
								<td><img  src="/image/service/@item.ImageUrl" style="height:50px;"/></td>
								<td >
									<div class="d-flex order-actions">
										<a asp-action="Edit" asp-controller="Service" asp-route-id="@item.ID" class=""><i class='bx bxs-edit'></i></a>
										<a asp-action="Delete" asp-controller="Service" asp-route-id="@item.ID" class="ms-3"><i class='bx bxs-trash'></i></a>
									</div>
								</td>
							</tr>
						}


					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
 
