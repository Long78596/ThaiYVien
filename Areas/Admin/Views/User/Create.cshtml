﻿

@model ThaiYVien.Areas.Admin.Dto.User.UserCreateDto

@{
    ViewData["title"] = " Create user";
}
<div class="container mt-5">
    
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6">
            <form method="post" asp-action="Create" asp-controller="User">
          <div class="card">
              <div class="card-header">
                    <h3 class="text-center">Thêm mới</h3>
              </div>
              <div class="card-body">
                    

                        <div asp-validation-summary="ModelOnly" class="text-danger">
                        </div>
                        <div class="form-group mt-2">
                            <label>Tên Tài khoản</label>
                            <input asp-for="UserName" type="text" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger">

                            </span>

                        </div>
                        <div class="form-group mt-2">
                            <label>Họ và tên</label>
                            <input asp-for="FullName" type="text" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger">

                            </span>

                        </div>

                        <div class="form-group mt-2">
                            <label>Email</label>
                            <input asp-for="Email" type="text" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger">

                            </span>

                        </div>
                        <div class="form-group mt-2">
                            <label>Số điện thoại</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger">

                            </span>

                        </div>
                        <div class="form-group mt-2">
                            <label>Password</label>
                            <input asp-for="PasswordHash" type="text" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger">

                            </span>

                        </div>

                        <div class="form-group">
                            <label>Roles</label>
                            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                            </select>
                            <span asp-validation-for="RoleId" class="text-danger">

                            </span>

                        </div>







                       
                  
                    <div class="card-footer text-end">
                       
                           
                                <button class="btn btn-primary" type="submit">
                                    Xác nhận
                                </button>

                    </div>

              </div>


          </div>
            </form>
        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}