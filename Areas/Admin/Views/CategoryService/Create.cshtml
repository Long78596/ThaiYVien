
@model CategoryServiceModel
@{
    ViewData["title"] = "Thêm mới  Danh mục";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 col-12 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Thêm mới Danh mục</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="CategoryService" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="form-label">Tên Danh mục</label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>

                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Create</button>

                        </div>
                    </form>
                    <a asp-action="index" asp-controller="CategoryService" class="text-decoration-underline-none mt-2">Danh sách danh mục </a>

                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}