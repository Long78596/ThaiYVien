@model ThaiYVien.Data.Dto.RegisterDto
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng ký </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/FE/login.css" rel="stylesheet" />
    <link rel="icon" href="~/FE/assets/img/changelogo-removebg-preview.png" sizes="192x192" />
</head>

<body>
    <div class="login-container">
        <div class="login-box">
            <img src="~/FE/assets/img/changelogo-removebg-preview.png" alt="Logo">
            <h1 class="mb-3"><b>THÁI Y VIỆN</b></h1>

          

            <!-- Form Đăng Ký (Ẩn ban đầu) -->
            <div id="register-form" >
                <form asp-action="Create" asp-controller="Account" method="post">
                   

                    <div class="mb-3 text-start">
                        <label asp-for="Username" for="register-name" class="form-label"><b>Tên tài khoản</b></label>
                        <input asp-for="Username" type="text" class="form-control" id="register-name" placeholder="Nhập ten tài khoản">
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="mb-3 text-start">
                        <label asp-for="Email" for="register-email" class="form-label"><b>Email</b></label>
                        <input asp-for="Email" type="text" class="form-control" id="register-email" placeholder="Nhập email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3 text-start password-container">
                        <label asp-for="Password" for="register-password" class="form-label"><b>Mật khẩu</b></label>
                        <input asp-for="Password" type="password" class="form-control" id="register-password" placeholder="Nhập mật khẩu">
                        <i class="fas fa-eye toggle-password" onclick="togglePassword('register-password')"></i>
                          <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Đăng Ký</button>
                </form>

                <p class="mt-3">
                    Đã có tài khoản? <a  asp-action="Login" asp-controller="Account" id="show-login" style="text-decoration:none;">
                        <b class="text-dark">Đăng nhập</b>
                    </a>
                </p>
            </div>

            <p class="mt-3">Follow</p>
            <div class="homepage-links">
                <a href="#" target="_blank" class="btn btn-youtube">
                    <i class="fab fa-youtube"></i> YouTube
                </a>
                <a href="https://www.facebook.com/thaiyvienvietnam/" target="_blank" class="btn btn-facebook-home">
                    <i class="fab fa-facebook"></i> Facebook
                </a>
            </div>
        </div>
    </div>
    

    <script>
       

        function togglePassword(id) {
            var input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
            } else {
                input.type = "password";
            }
        }

    </script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
        @if (TempData["Success"] != null)
        {
            <text>toastr.success('@TempData["Success"]'); </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>toastr.error('@TempData["Error"]'); </text>
        }
                            });
    </script>

    @section Scripts {
       @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");

       }
   
    }
  
</body>

</html>